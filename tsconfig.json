{
  "compilerOptions": {
    "declaration": true,
    "module": "es6",
    "noImplicitAny": true,
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "./types/"],
  "exclude": ["node_modules"]
}
